<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginStart="15dp"
            android:text="What do you want to post?"
            android:textSize="16dp"/>

        <RadioGroup
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/radio_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/loser_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Lost Item"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/founder_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Received Item"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RadioGroup>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adding details would help us find faster."
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <Button
            android:layout_marginStart="15dp"

            android:id="@+id/location_button"
            android:layout_width="120dp"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="#ffff"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/custom_button"
            android:text="Select Location"
            android:textStyle="bold" />

            <Button
                android:layout_marginLeft="15dp"

                android:id="@+id/add_image_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:backgroundTint="#ffff"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/custom_button"
                android:text="Select Image"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#fff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_below="@+id/radio_id"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:src="@drawable/lostandfound"
                    />

                <Button
                    android:id="@+id/fab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:text="Post this Image" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="#EEF9FA"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/editDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:hint="Add the Description of the Item "
                    />

                <Button
                    android:id="@+id/addDecsriptionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:text="Post this Description" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>