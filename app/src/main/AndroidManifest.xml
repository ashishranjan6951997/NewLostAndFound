<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lostandfound">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application

        android:allowBackup="true"
        android:icon="@drawable/newlostandfoundimage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".View.EditUI.EditActivity"
            android:theme="@style/AppTheme"
            >

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Chat.ChatActivity"
            android:screenOrientation="portrait"
       
         
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".View.Authentication.AuthenticateActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".View.SecondUi.SecondMainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MapActivity.MapActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>